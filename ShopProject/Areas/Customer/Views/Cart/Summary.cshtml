@model ShopProject.Models.ViewModels.CartViewModel
@{
    ViewData["Title"] = "Summary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    @if (Model.ServiceList.Count > 0)
    {
        <br />
        <div class=" container">
            <div class="card">
                <div class="card-header bg-dark text-light ml-0 row container">
                    <div class="col-12 d-none d-md-block col-md-6 pb-1">
                        <i class="fas fa-shopping-cart"></i> &nbsp;Podsumowanie zamówienia
                    </div>
                   
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="col-12 col-lg-6 pb-4">
                                <div class="row">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="nice-font">Podaj dane</span>
                                    </h4>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Pełna nazwa</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="OrderHeader.Name" id="txtName" type="text" class="form-control" />
                                        <span asp-validation-for="OrderHeader.Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Telefon</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="OrderHeader.Phone" id="txtPhone" type="text" class="form-control" />
                                        <span asp-validation-for="OrderHeader.Phone" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Adres</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="OrderHeader.Address" type="text" class="form-control" />
                                        <span asp-validation-for="OrderHeader.Address" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Miato</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="OrderHeader.City" type="text" class="form-control" />
                                        <span asp-validation-for="OrderHeader.City" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Kod pocztowy</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="OrderHeader.ZipCode" type="text" class="form-control" />
                                        <span asp-validation-for="OrderHeader.ZipCode" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Email</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="OrderHeader.Email" type="text" class="form-control" />
                                        <span asp-validation-for="OrderHeader.Email" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-5 offset-lg-1">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="nice-font">Usługi</span>
                                </h4>
                                <ul class="list-group mb-3">
                                    @{ var total = 0.0;}

                                    @foreach (var details in Model.ServiceList)
                                    {
                                        <li class="list-group-item d-flex justify-content-between">
                                            <div>
                                                <input type="hidden" asp-for="@details.Id" />
                                                <h6 class="my-0">@details.Name</h6>
                                                <small class="text-muted">Czas usługi: @details.TimeService.Time</small>
                                            </div>
                                            <span class="text-muted">@(details.Price) zł</span>
                                            @{ total += (details.Price);}
                                        </li>
}

                                    <li class="list-group-item d-flex justify-content-between bg-light">
                                        <small class="text-primary">W sumie: </small>
                                        <strong class="text-primary">@total zł</strong>
                                    </li>

                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="form-group row">
                        <div class="col-8 offset-4">
                            <div class="row">
                                <div class="col">                                 
                                    <a asp-action="Index" asp-controller="Cart" asp-area="Customer" class="btn btn-danger form-control">Powrót</a>
                                </div>
                                <div class="col">
                                    <button type="submit" class="btn btn-success form-control">Złóż zamówienie</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                             
                </div>
            </div>
        </div> }
    else
    {
        <div class="backgroundWhite">Brak przedmiotów w koszyku</div>}
</form>



