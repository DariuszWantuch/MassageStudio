@using ShopProject.Utility

@{ var status = Context.Request.Query["status"];

    var approved = "text-primary";
    var pending = "text-primary";
    var all = "text-primary";

    if (status == "approved")
    {
        approved = "active text-white";
    }
    else
    {
        if (status == "pending")
        {
            pending = "active text-white";
        }
        else
        {
            all = "active text-white";
        }
    } 
}

<div class="backgroundWhite">
    <div class="d-flex justify-content-between mb-3">
        <div class="p-2">
            <h2 class="nice-font">Zamówione usługi</h2>
        </div>
        <div class="p-2">
            <ul class="list-group list-group-horizontal-sm">
                <a style="text-decoration:none" asp-controller="Order" asp-route-status="pending" asp-action="Index">
                    <li class="list-group-item nice-font @pending">Oczekujące</li>
                </a>
                <a style="text-decoration:none" asp-controller="Order" asp-route-status="approved" asp-action="Index">
                    <li class="list-group-item nice-font @approved">Zatwierdzone</li>
                </a>
                <a style="text-decoration:none" asp-controller="Order" asp-route-status="all" asp-action="Index">
                    <li class="list-group-item nice-font @all">Wszystkie</li>
                </a>
            </ul>
        </div>
    </div>

    <br />
    <table id="tblData" class="table table-bordered text-dark table-striped" style="width:100%">
        <thead>
            <tr class="bg-dark text-light">
                <th>Pełna nazwa</th>
                <th>Telefon</th>
                <th>Email</th>
                <th>Ilość usług</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
    </table>


</div>

@section Scripts{
    <script src="~/js/orders.js"></script>
}