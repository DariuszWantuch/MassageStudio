@model ShopProject.Models.Category
@{
    var title = "Dodawanie kategorii";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <form method="post" asp-action="Upsert" class="backgroundWhite">

        <div class="row px-2 mx-2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.Id != 0)
            {
                <input type="hidden" asp-for="Id" />
                title = "Dodawanie Kategorii";
            }

            <div class="col-12">
                <h2 class="nice-font">@title</h2>
                <br />
            </div>
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label class="nice-font">Nazwa kategorii</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>               
                <div class="form-group row">
                    <div class="col-8 offset-4">
                        @if (Model.Id != 0)
                        {                          
                            <partial name="_EditAndBackToListButton" model="Model.Id" />
                        }
                        else
                        {                            
                            <partial name="_CreateAndBackToListButton" />
                        }
                    </div>
                </div>
            </div>

        </div>

    </form>
